{
  "name": "alspotron",
  "version": "0.1.0",
  "description": "Alspotify의 Electron 버전입니다",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc&&electron ./dist/index.js",
    "dev:renderer": "vite",
    "postinstall": "npx patch-package",
    "build": "tsc&&vite build",
    "dist": "npm run build&&electron-builder",
    "dist:only": "electron-builder"
  },
  "keywords": [],
  "author": "Su-Yong",
  "license": "ISC",
  "devDependencies": {
    "@types/koa": "^2.13.6",
    "@types/koa__cors": "^4.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.4",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-plugin-solid": "^2.7.0",
    "vite-plugin-static-copy": "^0.16.0"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "alsong": "^3.0.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.0",
    "mica-electron": "^1.4.5",
    "solid-js": "^1.7.7",
    "solid-transition-group": "^0.2.2"
  },
  "build": {
    "productName": "Alspotron",
    "asar": false,
    "appId": "me.suyong.alspotron",
    "extends": null,
    "files": [
      "dist"
    ],
    "extraResources": [
      "./assets/**"
    ],
    "mac": {
      "target": [
        "default"
      ],
      "category": "public.app-category.music"
    },
    "dmg": {
      "title": "Alspotron"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "directories": {
      "buildResources": "./build",
      "output": "./pack/",
      "app": "."
    }
  }
}
